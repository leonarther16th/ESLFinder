<!DOCTYPE html>
<html>
<head>
  <title>Eslfinder</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
   <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed" role="navigation">
  <div class="container">
    <a class="navbar-brand" href="#">CLLC Price Finder</a>
    <ul class="nav navbar-nav navbar-right">
        <li><%= link_to("Welcome #{current_user.first_name}", edit_user_registration_path(current_user)) if user_signed_in? %></li>
        <li><%= link_to("Sign out",  destroy_user_session_path, :method => 'delete')  if user_signed_in? %></li>
    </ul>

  </div>
</nav>

<div class="container">
	<% if notice %>
		<div class="alert alert-info"><%= notice %></div>
	<% end %>
	<% if alert %>
      	<div class="alert alert-danger"><span class="glyphicon glyphicon-remove"></span>  <%= alert %></div>
    <% end %>


	<div class="row">
		<div class="col-lg-12">
			<%= yield %>
		</div>
	</div>
</div>

 <script>
$(function() {
$( "#datepicker" ).datepicker({ dateFormat: 'dd-mm-yy' });
});
</script>

</body>


</html>
