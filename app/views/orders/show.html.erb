<% if notice %>
  <div class="alert alert-info" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>
<div class="well">
<legend><span class="oi oi-calculator"></span> Order Details</legend> <span class="pull-right label label-default">offer/order code: <%= @order.offer_code %></span><br>

<table class="table table-striped ">
  <thead>
    <tr>

      <th>School</th>
      <th>Order Summary</th>
      <th>Total price</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= link_to @order.school.name, @order.school, class: "order-school-name", target: "_blank" %></td>
        <td><%= @order.num_seats %> seat for <%= @order.num_weeks %> weeks starting on <%= @order.start_date.to_formatted_s(:long) %></td>
        <td><%= number_to_currency(@order.total_price) %></td>
        <td><p><span class="label label-warning label-lg">This order is <u><%= @order.state %></u> and will expire in <%= time_ago_in_words(@order.expire_date) %> if not paid</span></p></td>
      </tr>
  </tbody>
</table>

<br>
<div class="col-lg-4">
  <table class="table">

    <thead>
      <tr>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><span class="label label-info">This order is not linked to any student!</span></td>
          <td><%= link_to edit_order_path(@order), class: "btn btn-xs btn-info btn-embossed" do %>
                <span class="oi oi-infinity"></span>&nbsp Link this order to a student
              <% end %>
          </td>
        </tr>
    </tbody>
  </table>
</div>


<div class="col-lg-4 col-lg-offset-4">
  <table class="table">

    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= link_to @order, class: "btn btn-xs btn-primary btn-embossed" do %>
                <span class="oi oi-credit-card"></span>&nbsp Pay now
              <% end %>
          </td>
          <td><%= link_to edit_order_path(@order), class: "btn btn-xs btn-info btn-embossed" do %>
                <span class="oi oi-action-undo"></span>&nbsp Pay the school
              <% end %>
          </td>
          <td><%= link_to @order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger btn-embossed" do %>
                <span class="oi oi-circle-x"></span>&nbsp Cancel order
              <% end %>
          </td>
        </tr>
    </tbody>
  </table>
</div>
<p></p><br><br>
</div>