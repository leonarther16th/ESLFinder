

<div class="well">
<legend><span class="oi oi-calculator"></span> Order Details</legend> <span class="pull-right"><i>Referenece number:</i> <span class="label label-default"><%= @order.offer_code %></span></span><br>

<table class="table table-striped ">
  <thead>
    <tr>

      <th>School</th>
      <th>Order Summary</th>
      <th>Total price</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= link_to @order.school.name, @order.school, class: "order-school-name", target: "_blank" %></td>
        <td><i><%= @order.num_seats %> seat for <%= @order.num_weeks %> weeks starting on <%= @order.start_date.to_formatted_s(:long) %></i></td>
        <td><strong><%= number_to_currency(@order.total_price) %></strong></td>
        <td><span class="label <%= labelTag(@order.state)[0] %> label-lg">This order is <%= @order.state %></span></td>
      </tr>
  </tbody>
</table>

<br>
<div class="col-lg-4">
  <table class="table">

    <thead>
      <tr>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
        <tr>
        <% if !@order.student %>
          <td><span class="label label-info">This order is not linked to any student!</span></td>
          <td><%= link_to edit_order_path(@order), class: "btn btn-md btn-info btn-embossed" do %>
                <span class="oi oi-infinity"></span>&nbsp Link this order to a student
              <% end %>
          </td>
        <% else %>
          <td><span class="label label-info"><%= "Linked to #{@order.student.name} from #{@order.student.country.name}" %></span></td>
          <td><%= "" %></td>
        <% end %>
        </tr>
    </tbody>
  </table>
</div>


<div class="col-lg-4 col-lg-offset-4">
  <table class="table">

    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
        <tr>
        <% if @order.state == 'pending' %>
          <td><%= link_to new_reservation_path(order_id: @order.id), class: "btn btn-md btn-primary btn-embossed" do %>
                <span class="oi oi-credit-card"></span>&nbsp Reserve order
              <% end %>
          </td>
          <% end %>
          
          <td><%= link_to @order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md btn-danger btn-embossed" do %>
                <span class="oi oi-circle-x"></span>&nbsp Cancel order
              <% end %>
          </td>
        </tr>
    </tbody>
  </table>
</div>
<p></p><br><br>
<span class="label label-info pull-right"><span class="oi oi-star"></span> Your visa card will not be charged! You will pay directly to the school!</span>
  
<br>
<br>
</div>