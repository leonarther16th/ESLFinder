<div class="well">
  <h1>Listing orders</h1>

  <table class="table">
    <thead>
      <tr>

        <th>School</th>
        <th>Order Summary</th>
        <th>Total price</th>
        <th></th>
        <th></th>

      </tr>
    </thead>
   
   
      <% @orders.each do |order| %>
        <tbody>
        <tr>
          <td><%= link_to order.school.name, order.school, class: "order-school-name", target: "_blank" %></td>
          <td><%= order.num_seats %> seat for <%= order.num_weeks %> weeks starting on <%= order.start_date.to_formatted_s(:long) if order.start_date %></td>
          <td><%= number_to_currency(order.total_price) %></td>
          <td><p><span class="label label-warning label-lg">This order is <u><%= order.state %></u> and will expire in <%= time_ago_in_words(order.expire_date) if order.expire_date %> if not paid</span></p></td>
          <td>
          <%= link_to order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger btn-embossed" do %>
                <span class="oi oi-circle-x"></span>&nbsp Cancel order
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
