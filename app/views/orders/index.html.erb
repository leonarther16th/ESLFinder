<div class="well">
  <legend><span class="oi oi-calculator"></span> Orders Management</legend>

  <table class="table table-striped">
    <thead>
      <tr>

        <th>School</th>
        <th>Order summary</th>
        <th>Total price</th>
        <th>Status</th>
        <th></th>
        <th></th>
        <th></th>

      </tr>
    </thead>
   
   <tbody>
      <% @orders.each do |order| %>
        
        <tr>
          <td><%= link_to order.school, class: "btn btn-xs btn-default btn-embossed", target: "_blank" do %>
                <%= order.school.name %> &nbsp <span class="oi oi-external-link"></span>
              <% end %>
          </td>
          <td><i><%= order.num_seats %> seat for <%= order.num_weeks %> weeks starting on <%= order.start_date.to_formatted_s(:long) if order.start_date %></i></td>
          <td><strong><%= number_to_currency(order.total_price) %></strong></td>
          <td><span class="label <%= labelTag(order.state)[0] %>  label-lg"><%= order.state.humanize %>&nbsp &nbsp <span class="oi <%= labelTag(order.state)[1] %>"></span></span></td>
          <td>
          <% if order.state == 'pending' %>
            <%= link_to new_reservation_path(order_id: order.id), class: "btn btn-xs btn-primary btn-embossed" do %>
                  <span class="oi oi-credit-card"></span>&nbsp Reserve
                <% end %>
          <% end %>
          </td>
          <td>
          <%= link_to '#', class: "btn btn-xs btn-info btn-embossed" do %>
                <span class="oi oi-link-intact"></span>&nbsp Link student
              <% end %>
          </td>

          <td>
          <%= link_to order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger btn-embossed" do %>
                <span class="oi oi-circle-x"></span>&nbsp Cancel
              <% end %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

    
  <span class="label label-info pull-right"><span class="oi oi-star"></span> Your visa card will not be charged! You will pay directly to the school!</span>
  
<br>
</div>
