<%= simple_form_for(@school, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <% cities = City.all %>
    <%= f.input :city_id , as: :select, collection: cities, value_method: :id, label_method: :name, input_html: {id: "select2", "style" => "width:300px"} %>
    
    <%= f.input :country_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
