<div class="col-golden-sm">
  <div class="well">
    <%= render 'form' %>
  </div>
</div>
<div class="col-golden-lg">
  <div class="well">
    <h4>All schools</h4>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>City</th>
          <th>Country</th>
          <th></th>
          
        </tr>
      </thead>
      <tbody>
        <% @schools.each do |school| %>
        <tr>
          <td><%= school.name %></td>
          <td><%= school.city.name %></td>
          <td><%= school.country.name %></td>
          <td><%= link_to 'Show', school, class:"btn btn-info btn-xs" %>
            <%= link_to 'Edit', edit_school_path(school), class:"btn btn-info btn-xs" %>
          <%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New School', new_school_path, class:"btn btn-primary btn-sm "  %>
  </div>
  
  <!-- Delete from here -->

  <div class="well">
    <% @user_setting = UserSetting.last %>
    <% test = City.all %>
    <%= simple_form_for(@user_setting, remote: true) do |f| %>
      <%= f.simple_fields_for :setting do |setting_form| %>

        <%= setting_form.input :increase_prices_by, :input_html => {value: @user_setting.setting[:increase_prices_by]}, collection: 5..20 %>
        <%= setting_form.input :hide_suggested_student_price, as: :select, collection: [1,2,3,4,'Hello'], :input_html => {value: @user_setting.setting[:hide_suggested_student_price]} %>

        <%= setting_form.input @user_setting.setting.keys[0], :input_html => {value: @user_setting.setting[:hide_suggested_student_price]} %>

        <%= @user_setting.setting.each do |k, v| %>
          <%= setting_form.input k, :input_html => {value: v} %>
        <% end %>

      <% end %>
    <% end %>
  </div>
  <!-- Delete to here -->
</div>