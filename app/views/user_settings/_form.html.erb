<%= simple_form_for(@user_setting, remote: true) do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
	<%= f.input :user_id, as: :hidden %>
	<% f.input :setting %>
	
	



	<%= f.simple_fields_for :setting do |setting| %>
		
		<% @app_settings.each do |s| %>
			<div><label><%= s.name.humanize %></label><br>
			<%= setting.input_field s.name, as: :select, collection: s.options,  selected: @user_setting.setting[s.name] %>
			</div>
		<% end %>
	<% end %>

	
</div>
<div class="form-actions">
	<%= button_tag( class: "btn btn-primary ", id: "save-settings") do %>
		Save Changes
	<% end %>
</div>
<% end %>






