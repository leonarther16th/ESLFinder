<%= simple_form_for(@agency, remote: true, :authenticity_token => true) do |f| %>
		<div class="row">
		<div class="col-lg-12">
		  <%= f.error_notification %>

		  </div>

		  <div class="col-lg-12">
		    <%= f.input :name, label: "Agency Name", input_html: {class: "agency-settings-field"} %>
		  </div>


		  <div class="col-lg-6">
		    <%= f.input :email, input_html: {class: "agency-settings-field"} %>
		  </div>
		  <div class="col-lg-6">
		    <%= f.input :website, input_html: {class: "agency-settings-field"} %>
		  </div>

		  <div class="col-lg-6">
		    <%= f.input :country_id, as: :select, collection: @countries, value_method: :id, label_method: :name, input_html: {class: "agency-settings-field", id: "select2-country", "style" => "width:390px"}  %>
		  </div>
		  <div class="col-lg-6">
		    <%= f.input :city, input_html: {class: "agency-settings-field"} %>
		  </div>
		  <div class="col-lg-12">
		    <%= f.input :address, input_html: {class: "agency-settings-field"} %>
		  </div>
		  <div class="col-lg-12">
		    <%= f.input :ref_num, label: "Agency Reference Number", input_html: {class: "agency-settings-field"} %>
		    <span class="label label-info pull-right">Your reference number is required in order for you to use this application!</span>
		  </div>
		  <%= f.hidden_field :user_id %>
		
		  <div class="col-lg-12">
		    <%= button_tag( :class => "btn btn-inverse btn-sm", :id => "save-agency") do %>
		    <i class="glyphicon glyphicon-floppy-disk"></i> Save Changes
		    <% end %>
		 </div>
		</div>

		  <% end %>