<%= simple_form_for(@search ) do |f| %>
 

<%= f.error_notification %>
        
        <%= f.input :city_id, collection: @cities, value_method: :id, label_method: :name, as: :radio_buttons, boolean_style: :inline, wrapper: :horizontal_radio_and_checkboxes  %>
 
      
        
        <%= f.input :num_weeks %>
      

   
  
    
    <%= f.input :num_seats %>


  
   
    <%= f.input :start_date, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d-%m-%Y') } %>
  

  
  
    <%= f.input :student_name, as: :string %>

  
   
    <%= f.input :course_id,  collection: @courses, value_method: :id, label_method: :name, :include_blank => "Select course..." %>


  
    
    <%= f.hidden_field :user_id %>
 

  
  

<%= button_tag( :class => "btn btn-success pull-right") do %>
  <i class="glyphicon glyphicon-tasks"></i> Find offers
<% end %>
<br>
 
 
<% end %>
