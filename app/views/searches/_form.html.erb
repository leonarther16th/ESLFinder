<%= simple_form_for(@search ) do |f| %>
 

<%= f.error_notification %>
        
       
 

      <div class="row">
        <div class="col-lg-6">
        <%= f.input :num_weeks %>
      </div>

   
  
    <div class="col-lg-6">
    <%= f.input :num_seats %>
    </div>
    </div>

   
    <%= f.input :start_date, as: :string, input_html: { class: "",  id: "datepicker", 'data-date-format' => "dd-mm-yyyy" } %>
  	


  
   
    <%= f.input :course_id,  collection: @courses, value_method: :id, label_method: :name, :include_blank => "Select course..." %>


  
    
    <%= f.hidden_field :user_id %>
 


<label class="select optional control-label" >City</label><br>
  <%= f.collection_radio_buttons :city_id,  @cities, :id,  :name, required: true  %>
<br>


<%= button_tag( :class => "btn btn-success pull-right") do %>
  <i class="glyphicon glyphicon-search"></i> Search
<% end %>


<br>
 <br>

 
<% end %>

