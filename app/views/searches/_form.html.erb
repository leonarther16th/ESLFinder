<%= form_for(@search) do |f| %>
  <% if @search.errors.any? %>
    <div id="error_explanation">
        <% @search.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger">
        <h4><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h4>
        <%= msg %>
        </div>
      <% end %>
      
    </div>
  <% end %>

 <form role="form">
<div class="row">
<div class="col-lg-6">
     <div class="form-group">
        <%= f.label :city_id %><br>
        <%= f.number_field :city_id, class: "form-control" %>
     </div>
  </div>
  <div class="col-lg-6">

      <div class="form-group">
        <%= f.label :num_weeks %><br>
        <%= f.number_field :num_weeks, class: "form-control" %>
      </div>

    </div>
  </div>
    
  <div class="form-group">
    <%= f.label :num_seats %><br>
    <%= f.number_field :num_seats, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date, class: "form-control", :data => { :behavior => "datepicker" } %>
  </div>

  <div class="form-group">
    <%= f.label :student_name %><br>
    <%= f.text_field :student_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :course_id %><br>
    <%= f.collection_select :course_id, @courses, :id, :name, :include_blank => "Select course...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Get Prices", class: "btn btn-primary shadow btn-green" %>
  </div>

  </form>

 
<% end %>
