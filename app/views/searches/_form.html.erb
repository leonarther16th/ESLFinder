<%= simple_form_for(@search ) do |f| %>
 

<%= f.error_notification %>
        
        <%= f.input :city_id, collection: @cities, value_method: :id, label_method: :name, as: :radio_buttons, boolean_style: :inline, wrapper: :horizontal_radio_and_checkboxes,input_html: { class: "css-checkbox"}, label_html: {class: "css-label"}   %>
 
      
        
        <%= f.input :num_weeks %>
      

   
  
    
    <%= f.input :num_seats %>


  	<div id="dp3" class="input-append date" data-date-format="dd-mm-yyyy" data-date="12-02-2012">
   
    <%= f.input :start_date, as: :string, input_html: { class: "",  id: "datepicker", 'data-date-format' => "dd-mm-yyyy" } %>
  	<span class="add-on"><i class="icon-calendar"></i></span>
  	</div>

  
  
    <%= f.input :student_name, as: :string %>

  
   
    <%= f.input :course_id,  collection: @courses, value_method: :id, label_method: :name, :include_blank => "Select course..." %>


  
    
    <%= f.hidden_field :user_id %>
 

  
  

<%= button_tag( :class => "btn btn-success pull-right") do %>
  <i class="glyphicon glyphicon-tasks"></i> Find offers
<% end %>
<br>
 
 
<% end %>

