<div class="col-golden-sm col-md-12 col-sm-12 col-xs-12" >
	<div class="filter-container">
		<div class="filter">

			<div class="well" >
			<legend><span class="oi oi-magnifying-glass"></span>  Search</legend><hr>
				<%= render 'form' %>
			</div>
			
		</div>
	</div>
</div>
<div class="col-golden-lg col-md-12 col-sm-12 col-xs-12">
	<div class="content">
		<div class="well well-search-info">
			<b><span class="oi oi-badge"></span>&nbsp There are <span class="label label-danger"><%= @offers.count %> available offers</span> based on your serach input:</b><br>
			<small><i>Start date:&nbsp <%= @last_search.start_date.to_formatted_s(:long) %>  &nbsp | &nbsp  Number of weeks:&nbsp <%= @last_search.num_weeks %></i></small>
		</div><hr>
		<% @offers.each do |o| %>
		<div class="seat-well" data-container="body" data-toggle="tooltip" data-placement="left" data-title="Valid only until <%= o.end_date.to_formatted_s(:long) %>, with a limited weekly seats of <%= o.weekly_limit %>">
			<div class="seat-details">
				<div class="seat-info">
					<img src="/assets/toronto-drowing.jpg" class="school-img" style="width: 100px; height: 100px;" alt=""><%= link_to o.school.name, o.school, class: "school-name", target: "_blank" %>
					
					<% rand(1..5).times do %>
					<span class="oi oi-star star"></span>
					<% end %>
					
					<% agency_full_price = o.weekly_price * @last_search.num_weeks * (1 + @increase_by) %>
					<% agency_offered_price = o.weekly_price * @last_search.num_weeks * (1 + @increase_by) %>
					<div class="offer-course"><span class="glyphicon glyphicon-book"></span> <%= o.course.name %></div>
					
					<div class="saving"><span class="glyphicon glyphicon-saved"></span> You are saving <b><%= number_to_currency(agency_full_price - agency_offered_price ) %></b> </div>
					
					<br>

					<% num_of_remaining_seats = o.num_of_seats %>
					<% if num_of_remaining_seats <= 20 %>
						<div class="offer-seats-remaining"><span class="oi oi-warning"></span> We have only <%= num_of_remaining_seats %> seats remaining under this offer!</div>
					<% end %>
				</div>
				<div class="offer-price">
					<table class="table table-condensed">
						<tr class="price-details-left">
							
							<td><b class="price-type green"><span class=""> </span> </b><br>
								<span class="label label-default"><%= number_to_currency(agency_offered_price) %> CAD</span><br>
								<%= link_to new_order_path(:offer_id => o.id, :state => :pending, :num_weeks => @last_search.num_weeks, :total_price => agency_full_price, :start_date => @last_search.start_date, :expire_date => Date.today + o.pay_within, :num_seats => @last_search.num_seats), class: "btn btn-success btn-xs book-now btn-embossed"  do %>
									<i class="glyphicon glyphicon-credit-card"></i> Book Now
									<% end %>
								</a>
							</td>
						</tr>
						
					</table>
					<div class="price-details book-now ">
						<% if @hide_sug_price == 'No' %>
						<span class="glyphicon glyphicon-asterisk"></span> Recomended price for students: <strong class="red"><%= number_to_currency((agency_offered_price * 1.30) / (1 + @increase_by)) %></strong>.<br>
						<% end %>
						<span class="glyphicon glyphicon-asterisk"></span> This price is for <%= @last_search.num_weeks %> weeks.
					</div>
				</div>
			</div>
		</div>
		<% end %>
		
	</div>
</div>