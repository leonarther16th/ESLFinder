

	<div class="filter" >
	
		<div class="well">
			<%= render 'form' %>
		</div>
	</div>

	


<div class="content">
<% @seat.each do |seat| %>
	<% 10.times do |s| %>

	<div class="seat-well">

		<div class="seat-photo">
			<img src=<%= asset_path('ottawa-drowing.jpg')  %> alt="">
		</div>


		<div class="seat-details">
			<div class="seat-info">
			<a href="#"><b><%= seat.city.name %> Campus</b></a>

				<div class="offer-course"><span class="glyphicon glyphicon-book"></span> <%= seat.course.name %></div>
				
				<div class="offer-dates"><span class="glyphicon glyphicon-time"></span> Available between <span class="label label-default"><%= seat.available_from_date.to_formatted_s(:long_ordinal) %></span> and <span class="label label-default"><%= seat.available_from_date.to_formatted_s(:long_ordinal) %></span> </div>
				
				<br>
				<% if rand(10) < 4 %>
				<div class="offer-seats-remaining"><span class="glyphicon glyphicon-warning-sign"></span> We have only <b><%= rand(10) %> seats</b> remaining under this offer!</div>
				<% end %>
			</div>

			<div class="offer-price">
				<span class="label label-danger">$<%= rand(2000) %> CAD</span> <br>
				<div class="price-details">*Price for 10 weeks</div>
				<div class="price-details">Recomended price for students: $<%= rand(2000) %></div>

				<%= button_tag( :class => "btn btn-success btn-xs offer-button") do %>
				<i class="glyphicon glyphicon-credit-card"></i> Buy this offer

				<% end %>
			</div>




		</div>

	</div>

	<% end %>
<% end %>


